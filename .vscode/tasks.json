{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Build, Watch, and Serve Site",
            "type": "process",
            "command": "${workspaceFolder}\\venv\\Scripts\\python.exe",
            "args": ["-m", "pelican", "-r", "-l"],
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false
            },
			"problemMatcher": [
				{
                    "source": "pelican",
                    "fileLocation": "absolute",
					"pattern": [
						{
                            "kind": "file",
							"regexp": "Skipping (.+): (.+)",
							"file": 1,
							"message": 2
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "re-generating...",
						"endsPattern": "Done: Processed [0-9]+ articles",
					}
				}
			],
        }
    ]
}